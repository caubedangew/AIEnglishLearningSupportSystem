<% content_for :title, "Lessons"%>
<h2 class="text-info text-center">List of Lessons</h1>

<%= link_to 'Add lessons'.html_safe, new_lesson_path(), class: "btn btn-primary" %>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Name: </th>
        <th>Content: </th>
        <th>Created time: </th>
        <th>Updated time: </th>
        <th>Course: 
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @lessons.each do |lesson| %>
        <tr>
            <td><%= lesson.name%></td>
            <td><%= lesson.content %></td>
            <td><%= lesson.created_at %></td>
            <td><%= lesson.updated_at %></td>
            <td><%= lesson.course.name %></td>
            <td>
                <%= link_to '&#9998;'.html_safe, edit_lesson_path(lesson), class: "btn btn-primary" %>
                <%= link_to '&times;'.html_safe,
                    lesson_path(lesson.id), class: "btn btn-danger",
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure to delete it?"
                    } 
                %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>