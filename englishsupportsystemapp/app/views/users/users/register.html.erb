<%= content_for :title, "Register"%>

<h1 class="text-center text-info">Register</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: "/users/register" do |f| %>
  <div>
    <%= f.label :username, "Username:", class: "form-label" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div>
    <%= f.label :password, "Password:", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div>
    <%= f.label :first_name, "First name:", class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div>
    <%= f.label :last_name, "Last name:", class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div>
    <%= f.label :email, "Email:", class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div>
    <%= f.label :gender, "Gender:", class: "form-label" %><br>
    <%= f.label :gender, "Male", value: "true"  %>
    <%= f.radio_button :gender, true %>
    <%= f.label :gender, "Female", value: "false" %>
    <%= f.radio_button :gender, false, checked: true %>
  </div>
  <div>
    <%= f.label :date_of_birth, "Date of birth:", class: "form-label mt-2" %>
    <%= f.date_field :date_of_birth, class: "form-control" %>
  </div>
  <p class="d-flex justify-content-center">
    <%= f.submit 'Register', class: "btn btn-primary mt-2" %>
  </p>
<% end %>
