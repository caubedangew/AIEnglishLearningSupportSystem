<%= content_for :title, "Login"%>

<h1 class="text-center text-info">Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:prompt] %>
  <div class="alert alert-success">
    <%= flash[:prompt] %>
  </div>
<% end %>

<%= form_with url: "/users/login" do |f| %>
  <div>
    <%= f.label :username, "Username:", class: "form-label" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div>
    <%= f.label :password, "Password:", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <p class="d-flex justify-content-center">
    <%= f.submit 'Login', class: "btn btn-primary mt-2" %>
  </p>
<% end %>