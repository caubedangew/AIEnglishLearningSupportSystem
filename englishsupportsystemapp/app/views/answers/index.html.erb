<% content_for :title, "Answers"%>
<h2 class="text-info text-center">List of Answers</h1>

<%= link_to 'Add answers'.html_safe, new_exercise_question_answer_path(@exercise_id, @question_id), class: "btn btn-primary" %>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Content: </th>
        <th>Correct: </th>
        <th>Created time: </th>
        <th>Updated time: </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @answers.each do |answer| %>
        <tr>
            <td><%= answer.content %></td>
            <td><%= answer.is_correct %></td>
            <td><%= answer.created_at %></td>
            <td><%= answer.updated_at %></td>
            <td>
                <%= link_to '&#9998;'.html_safe, edit_exercise_question_answer_path(@exercise_id, @question_id, answer.id), class: "btn btn-primary" %>
                <%= link_to '&times;'.html_safe,
                    exercise_question_answer_path(@exercise_id, @question_id, answer.id), class: "btn btn-danger",
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure to delete it?"
                    } 
                %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>