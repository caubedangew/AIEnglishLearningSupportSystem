<%= content_for :title, "Login"%>

<h1 class="text-center text-info">Login</h1>

<%= form_with model: @user, url: "/login" do |f| %>
  <div>
    <%= f.label :username, "Username:", class: "form-label" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div>
    <%= f.label :password, "Password:", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <p class="d-flex justify-content-center">
    <%= f.submit 'Login', class: "btn btn-primary mt-2" %>
  </p>
<% end %>